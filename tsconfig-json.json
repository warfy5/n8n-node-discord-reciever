{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "ES2021.String"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es2019",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["nodes/**/*", "credentials/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
